<?xml version="1.0"?>
<firewall application="iptables" safeMode="true">	
	<application cmd="/sbin/iptables">Local do iptables</application>
	<moduleApplication cmd="/sbin/modprobe">Local do modprobe</moduleApplication>
	<loadModules modules="ip_conntrack,ip_conntrack_ftp,ip_nat_ftp,ip_queue,ip_tables,ipt_LOG,ipt_MARK,  ipt_MASQUERADE,ipt_MIRROR,ipt_REDIRECT,ipt_REJECT,ipt_TCPMSS,ipt_TOS,ipt_limit ,ipt_mac,ipt_mark,  ipt_multiport,ipt_owner,ipt_state,ipt_tcpmss ,ipt_tos,ipt_unclean,iptable_filter,iptable_mangle,  iptable_nat">Modulos necessarios</loadModules>
